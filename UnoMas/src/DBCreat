CREATE TABLE `board_notice` (
  `notice_num` int NOT NULL AUTO_INCREMENT,
  `admin_num` int DEFAULT NULL,
  `notice_title` varchar(30) DEFAULT NULL,
  `notice_content` mediumtext,
  `notice_regdate` timestamp NULL DEFAULT CURRENT_TIMESTAMP,
  `notice_readcount` int DEFAULT '0',
  `notice_ip` varchar(255) DEFAULT NULL,
  PRIMARY KEY (`notice_num`)
);

CREATE TABLE `board_faq` (
  `faq_num` int NOT NULL AUTO_INCREMENT,
  `faq_title` varchar(30) NOT NULL,
  `faq_cate` varchar(50) NOT NULL,
  `faq_content` varchar(500) NOT NULL,
  `faq_regdate` timestamp NULL DEFAULT CURRENT_TIMESTAMP,
  PRIMARY KEY (`faq_num`)
);

CREATE TABLE `unomasdb`.`board_qna` (
  `qna_num` INT NOT NULL AUTO_INCREMENT,
  `user_num` INT NULL,
  `qna_title` VARCHAR(30) NULL,
  `qna_content` VARCHAR(1000) NULL,
  `qna_regdate` TIMESTAMP NULL DEFAULT now(),
  `qnacate_num` INT NULL,
  `qna_process` INT NULL,
  PRIMARY KEY (`qna_num`));

CREATE TABLE `unomasdb`.`qna_comments` (
  `qnacom_num` INT NOT NULL AUTO_INCREMENT,
  `qna_num` INT NULL,
  `admin_num` INT NULL,
  `qnacom_content` VARCHAR(500) NULL,
  `qnacom_regdate` TIMESTAMP NULL DEFAULT now(),
  PRIMARY KEY (`qnacom_num`));
