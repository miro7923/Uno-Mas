    </beans:bean>
	

	<!-- 인터셉터 적용 -->
	<interceptors>
		<interceptor>
			<mapping path="/product/wishlist/**"/>
			<beans:bean id="WishIntreceptor" class="com.april.unomas.interceptor.WishInterceptor"></beans:bean>
		</interceptor>
		<interceptor>
			<mapping path="/product/cart/**"/>
			<beans:bean id="CartIntreceptor" class="com.april.unomas.interceptor.CartInterceptor"></beans:bean>
		</interceptor>
	</interceptors>

</beans:beans>
